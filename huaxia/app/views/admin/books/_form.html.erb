<% content_for :javascript_includes do %>
  <%= javascript_include_tag "/assets/ckeditor/ckeditor" %>
<% end %>

<div class="form-group">
  <%= f.label :name, "Name *", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :name, :class => "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :price, "Price *", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :price, :class => "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :discount_price, :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :discount_price, :class => "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :book_category_id, "Book Type *", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.select :book_category_id, BookCategory.list_type, {},:class => "form-control" %>
  </div>
</div>
<div class="form-group margin_b_0">
  <%= f.label :icon_image, "Image *", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.file_field :icon_image, :class => "control-label btn btn-default btn-file" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-2">&nbsp;</div>
  <div class="col-sm-10">
    please input image with size 800x600 (width x height)
  </div>
</div>
<div class="form-group margin_b_0">
  <%= f.label :book_image, "Image *", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.file_field :book_image, :class => "control-label btn btn-default btn-file" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-2">&nbsp;</div>
  <div class="col-sm-10">
    please input image with size 300x400 (width x height)
  </div>
</div>
<div class="form-group">
  <%= f.label :available, "Available *", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <label class="radio-inline"><%= f.radio_button :available, true %>Yes</label>
    <label class="radio-inline"><%= f.radio_button :available, false %>No</label>
  </div>
</div>
<div class="form-group margin_b_30">
  <%= f.label :description, :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.cktext_area :description, :class => "form-control",
                                    :ckeditor => {:uiColor => "#f0e5d2", :toolbar => "Basic"} %>
  </div>
</div>
