<div class="col-md-12 content">
  <h2><%= @tour_travel.title.humanize %></h2>
  <div class="col-md-12">
    <p><%= raw msg_flash(flash) %></p>
    <p><%= link_to "Add New Child Info", admin_new_child_tour_travels_path(@tour_travel.permalink) %></p>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>Icon</th>
          <th>Order</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        <% @child_tour_travels.each_with_index do |tour_travel, x| %>
          <tr>
            <th scope="row"><%= x+1 %></th>
            <td><%= tour_travel.title.humanize %></td>
            <td><%= image_tag tour_travel.menu_icon.url(:icon) %></td>
            <td><%= tour_travel.order_no %></td>
            <td>
                <%= link_to 'Edit', admin_edit_child_tour_travels_path(
                                    :child_id => tour_travel.permalink, :id => @tour_travel.permalink),
                                    :class => "btn btn-success" %>
                <%= link_to "Delete", admin_child_tour_travel_path(
                                    :child_id => tour_travel.permalink, :id => @tour_travel.permalink),
                                    :method => :delete, :confirm => "Are you sure?",
                                    :class => "btn btn-warning" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="admin-row">
      <%= link_to "Back To Tour Travel List", admin_tour_travels_path %><br /><br /><br />
    </div>
  </div>
</div>
