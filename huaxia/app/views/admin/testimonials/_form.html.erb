<% content_for :javascript_includes do %>
  <%= javascript_include_tag "/assets/ckeditor/ckeditor" %>
<% end %>

<div class="field">
  <div class="input-title left"><%= f.label :from, "From *" %><span>:</span></div>
  <div class="input-box left"><%= f.text_field :from %></div>
</div>
<div class="field">
  <div class="input-title left"><%= f.label :email, "Email *" %><span>:</span></div>
  <div class="input-box left"><%= f.text_field :email %></div>
</div>
<div class="field clear-margin">
  <div class="input-title left"><%= f.label :picture, "Image *" %><span>:</span></div>
  <div class="input-box left"><%= f.file_field :picture %></div>
</div>
<div class="field clear-margin">
  <div class="input-title left">&nbsp;</div>
  <div class="input-box left small-font">
    Input image with size 400x300 (width x height)
  </div>
</div>
<div class="field">
  <div class="input-title left"><%= f.label :comment, "comment *" %><span>:</span></div>
  <div class="input-box left">&nbsp;</div>
</div>
<div class="field" style="height: 440px;">
  <%= f.cktext_area :comment, :ckeditor => {:uiColor => "#F5CDFA", :toolbar => "Basic",
                                              :width=>'850px', :height=>'250px'}  %>
</div>
