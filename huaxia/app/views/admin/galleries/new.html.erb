<div class="col-md-12 content">
  <h2>New Image for '<%= @category.title.humanize %>'</h2>
  <div class="col-md-12">
    <%= form_for([:admin, @gallery], :url => admin_galleries_path(@category.id),
                  :html => { :multipart => true,  :class => "form-horizontal"}) do |f| %>
      <%= f.error_messages %>
      <%= render :partial => 'form', :locals => { :f => f} %>
      <div class="form-group">
        <div class="col-sm-2">&nbsp;</div>
        <div class="col-sm-10">
          <%= f.submit 'Create Image', :class => "btn btn-success" %>
          <%= link_to 'Back', admin_galleries_path(@category.id), :class => "btn btn-info" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
