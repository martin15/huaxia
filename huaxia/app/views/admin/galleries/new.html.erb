<div id="content">
  <div class="content-title">New Image for '<%= @category.title.humanize  %>'</div>
  <div class="admin-content-layer">
    <%= form_for([:admin, @gallery], :url => admin_galleries_path(@category.id),
                  :html => { :multipart => true}) do |f| %>
      <%= f.error_messages %>
      <%= render :partial => 'form', :locals => { :f => f} %>
      <div class="field">
        <%= f.submit 'Create Image' %>&nbsp;&nbsp;
        <%= link_to 'Back', admin_galleries_path(@category.id) %>
      </div>
    <% end %>
    <div class="clear"></div>
  </div>
</div>
