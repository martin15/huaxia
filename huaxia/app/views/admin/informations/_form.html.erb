<% content_for :javascript_includes do %>
  <%= javascript_include_tag "/assets/ckeditor/ckeditor" %>
<% end %>

<div class="form-group">
  <%= f.label :title, "Title *", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <% if ["about_us", "book_note", "study_in_china", "registration"].include?(@information.permalink) %>
      <%= @information.title.humanize %>
    <% else %>
    <%= f.text_field :title, :class => "form-control" %>
    <% end %>
  </div>
</div>
<div class="form-group">
  <%= f.label :order_no, :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :order_no, :class => "form-control" %>
  </div>
</div>
<div class="form-group margin_b_30">
  <%= f.label :content, "Content", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.cktext_area :content, :class => "form-control",
                                :ckeditor => {:uiColor => "#f0e5d2", :toolbar => "Basic"} %>
  </div>
</div>
