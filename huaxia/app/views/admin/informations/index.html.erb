<div id="content">
  <div class="content-title">Listing Informations</div>
  <div class="admin-content-layer">
    <%= raw msg_flash(flash) %>
    <%= link_to "Add New Info", new_admin_information_path %><br /><br /><br />
    <div class="admin-row border">
      <div class="no">No</div>
      <div class="title">Title</div>
      <div class="action">&nbsp;</div>
    </div>
    <% @informations.each_with_index do |information, x| %>
      <div class="admin-row">
        <div class="no"><%= @no+x+1 %></div>
        <div class="title text-left"><%= information.title.humanize %></div>
        <div class="action">
          <%= link_to 'Edit', edit_admin_information_path(information.permalink) %>
          <% unless ["about_us", "book_note", "study_in_china",
                     "study-in-china"].include?(information.permalink) %>
            |&nbsp;<%= link_to "Delete", admin_information_path(information.permalink ),
                                :method => :delete, :confirm => "Are you sure?" %>
          <% end %>

          
        </div>
      </div>
    <% end %>
    <div class="admin-row">
      <%= will_paginate @informations, :link_separator => " | ",
                                 :previous_label => "&laquo; previous",
                                 :next_label => "next &raquo;" %>

    </div>
    <div class="clear"></div>
  </div>
</div>


