<div class="col-md-12 content">
  <h2>Informations</h2>
  <div class="col-md-12">
    <p><%= raw msg_flash(flash) %></p>
    <p><%= link_to "Add new information", new_admin_information_path %></p>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        <% @informations.each_with_index do |information, x| %>
          <tr>
            <th scope="row"><%= @no+x+1 %></th>
            <td><%= information.title.humanize %></td>
            <td style="text-align:right">
              <%= link_to 'Edit', edit_admin_information_path(information.permalink), :class => "btn btn-success" %>
              <% unless ["about_us", "book_note", "study_in_china", "registration",
                         "study-in-china", "tour-and-travel", "tiket-pesawat"].include?(information.permalink) %>
                <%= link_to "Delete", admin_information_path(information.permalink ),
                                      :method => :delete, :confirm => "Are you sure?",
                                      :class => "btn btn-warning" %>
              <% end %>
              <%= link_to 'List Child information', admin_information_path(information.permalink),
                                                    :class => "btn btn-info" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="admin-row">
      <%= will_paginate @informations, :link_separator => " | ",
                                 :previous_label => "&laquo; previous",
                                 :next_label => "next &raquo;" %>

    </div>
  </div>
</div>
