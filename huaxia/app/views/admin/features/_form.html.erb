<% content_for :javascript_includes do %>
  <%= javascript_include_tag "/assets/ckeditor/ckeditor" %>
<% end %>

<div class="form-group">
  <%= f.label :title, "Title *", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :title, :class => "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :feature_category_id, "News Category *", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.select :feature_category_id, FeatureCategory.list_type, {},:class => "form-control" %>
  </div>
</div>
<% if @feature.feature_image.file? %>
  <div class="form-group">
    <div class="col-sm-2">&nbsp;</div>
    <div class="col-sm-10">
      <%= image_tag @feature.feature_image.url(:medium) %>
    </div>
  </div>
<% end %>
<div class="form-group margin_b_0">
  <%= f.label :feature_image, "Image", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <div class="row">
      <div class="col-sm-4">
        <%= f.file_field :feature_image, :class => "control-label btn btn-default btn-file" %>
      </div>
      <div class="col-sm-8">
        <% if params[:action] == "edit" %>
          <label class="checkbox-inline">
          <%= f.check_box :delete_image  %>Delete Image?
          </label>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-2">&nbsp;</div>
  <div class="col-sm-10">
    please input image with size 600x800 (width x height)
  </div>
</div>
<div class="form-group">
  <%= f.label :order_no, :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :order_no, :class => "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :short_description, :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :short_description, :class => "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :description, "Description", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.cktext_area :description, :class => "form-control",
                                    :ckeditor => {:uiColor => "#f0e5d2", :toolbar => "Basic"} %>
  </div>
</div>
<div class="form-group margin_b_30">
  <div class="col-sm-2">&nbsp;</div>
  <div class="col-sm-10">
    <label class="checkbox-inline">
      <%= f.check_box :display_at_home  %>Display at home page?
    </label>
  </div>
</div>
