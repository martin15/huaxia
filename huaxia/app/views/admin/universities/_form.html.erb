<% content_for :javascript_includes do %>
  <%= javascript_include_tag "/assets/ckeditor/ckeditor" %>
<% end %>

<div class="form-group margin_b_0">
  <%= f.label :logo_image, "Logo *", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.file_field :logo_image, :class => "control-label btn btn-default btn-file" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-2">&nbsp;</div>
  <div class="col-sm-10">
    please input image with size 200x200 (width x height)
  </div>
</div>
<div class="form-group">
  <%= f.label :name, "Name *", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :name, :class => "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :website, "Website", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :website, :class => "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :address, "Address *", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :address, :class => "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :city, "City *", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :city, :class => "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :province, "Province *", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :province, :class => "form-control" %>
  </div>
</div>
<div class="form-group margin_b_30">
  <%= f.label :description, :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.cktext_area :description, :class => "form-control",
                                    :ckeditor => {:uiColor => "#f0e5d2", :toolbar => "Basic"} %>
  </div>
</div>
