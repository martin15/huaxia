<div class="col-md-12 content">
  <h2><%= @program.title.upcase %></h2>
  <div class="col-xs-12 col-sm-12 col-md-12">
    <% if @program.feature_image.file? %>
      <span class="thumbnail program-image">
        <%= image_tag @program.feature_image.url(:medium), :class => "img-responsive" %>
      </span>
      <% end %>
    <div class="news-information"><%= raw @program.description %></div>
  </div>
</div>
