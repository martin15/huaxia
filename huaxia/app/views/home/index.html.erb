      <% nm = "no-margin-right" if (x+1)%3 == 0 %>
      <div class="mini-table <%= nm %>">
        <div class="mini-table-main mini-table-head" style="background-color:#<%= feature.color %>">
          <%= feature.title %>
        </div>
        <div class="mini-table-mid">
          <% if feature.feature_image.file? %>
            <span class="image">
              <%= image_tag feature.feature_image.url(:thumb), :size => "105x140" %>
            </span>
          <% end %>
          <span class="desc">
            <%= simple_format feature.short_description %>
          </span>
        </div>
        <div class="mini-table-main mini-table-low" style="background-color:#<%= feature.color %>">
