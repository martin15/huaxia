  <script type="text/javascript">
    $(window).load(function() {
        $('#slider').nivoSlider({
          effect: 'fade',
          pauseTime: 3000,
          animSpeed: 400,
          directionNav: false
        });
        $('.list-univ-at-map-box').each(function() { // Notice the .each() loop, discussed below
          $(this).qtip({
              content: {
                  text: $(this).next('div') // Use the "div" element next to this for the content
              },
            hide: {
                fixed: true,
                delay: 300
            },
            position: {
                at: 'center'
            }
          });
      });
    });

  </script>

