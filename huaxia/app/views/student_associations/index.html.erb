<div class="col-md-12 content">
  <h2>STUDENT ASSOCIATIONS<%#= @student_association.name.upcase %></h2>
  <div class="visible-xs hidden-sm hidden-md hidden-lg sub-menu-font">
    <% @student_associations.each_with_index do |student_association, x| %>
      <% if student_association.permalink == @student_association.permalink %>
        <span class="active line-height-sub-menu"><%= student_association.name.humanize.titleize %></span>
      <% else %>
        <%= link_to student_association.name.humanize, 
                    student_associations_path(student_association.permalink),
                     :class=>"line-height-sub-menu" %>
      <% end %>
      <%= raw "&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;" unless @student_associations.size == x+1 %>
    <% end %><br /><br /><br />
  </div>
  <div class=" hidden-xs col-sm-3 col-md-3">
    <% @student_associations.each do |student_association| %>
      <div class="col-md-12 padding_t_b_5 margin_b_10">
        <% if student_association.permalink == @student_association.permalink %>
          <span class="active"><%= student_association.name.humanize.titleize %></span><br />
        <% else %>
          <%= link_to student_association.name.humanize, 
                      student_associations_path(student_association.permalink) %><br />
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="col-xs-12 col-sm-9 col-md-9">
    <div class="col-xs-12 col-sm-5 col-md-6 margin_b_20">
      <div class="student-association img-rounded">
        <%= link_to (image_tag @student_association.logo.url(:medium),
                          :class => "img-responsive img-rounded #{@student_association.logo_position}"),
                          target_url(@student_association.url), :target => "blank" %>

      </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 no-padding-right">
      <p class="margin_b_5">
        <%= raw("Name : #{link_to @student_association.name, target_url(@student_association.url),
                                    :target => "blank"}<br />") unless @student_association.name.nil? %>
      </p>
      <p class="margin_b_5">
        <%= raw("City : #{@student_association.city}<br />") unless @student_association.city.nil? %>
      </p>
      <p class="margin_b_5">
        <%= raw("Website : #{link_to @student_association.url, target_url(@student_association.url),
                                    :target => "blank"}<br />") unless @student_association.city.nil? %>
      </p>
      <p class="margin_b_20"><%= raw(@student_association.description) %></p>
    </div>
  </div>
</div>

